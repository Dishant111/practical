
@{
    ViewData["Title"] = "Index";
}

<h2>Dynamic Employee Dashboard<small class="text-body-secondary"> (page 1 will get updated every 4 sec) </small> </h2>

<div class="">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    <strong>Id</strong>
                </th>
                <th scope="col">
                    <strong>Query Type</strong>
                </th>
                <th scope="col">
                    <strong>Query Status</strong>
                </th>
                <th scope ="col">
                    <strong>Action</strong>
                </th>
            </tr>
        </thead>
        <tbody id="tokentablebody">
        </tbody>

    </table>

    <div class="h-100 d-flex align-items-center justify-content-center">
        <ul class="pagination" id="tokenPagination">
        </ul>
    </div>

</div>

<div class="modal" id="resolveModel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resolve Query</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body" id="resolveModelbody">
                
                      @*   <form onsubmit="createTokenSubmit(event)">

                        </form> *@
            </div>

        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/EmployeeToken.js" asp-append-version="true"></script>
}